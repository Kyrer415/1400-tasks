#include <iostream>
using namespace std;

int main() {

    setlocale(LC_ALL, "Russian");
    double x, y;

    cout << "Введите значение a: ";
    cin >> x;

    y = 3 * x * x + 5 * x - 21;

    cout << "Значение функции y = 3a^2 + 5a - 21 при a = " << x << " равно: " << y << std::endl;

    return 0;
}
