#include <iostream>

using namespace std;

int main() {
    double side;
    cout << "Введите длину стороны квадрата: ";
    cin >> side;

    if (side <= 0) {
        cout << "Длина стороны должна быть положительным числом!" << endl;
    } else {
        double perimeter = 4 * side;
        cout << "Периметр квадрата: " << perimeter << endl;
    }

    return 0;
}
