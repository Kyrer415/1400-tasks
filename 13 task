#include <iostream>
using namespace std;

/*10 задача*/



int main()
{

	setlocale(LC_ALL, "Russian");
	int a;
	cout << "Введите ваше имя: ";
	cin >> a;
	cout << "Следующее за числом " << a << " число –" << a + 1 << "." << endl << "Для числа " << a << " предыдущее число –" << a - 1 << "." << endl;

	return 0;
}
